Algoritmo "exemplo2"
// programa que mostra número par ou ímpar
Var
   // Seção de Declarações das variáveis

   num : inteiro

Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...

   Escreva("Digite um número: ")
   leia(num)

   se (num mod 2 = 0) entao
      Escreva("PAR")
   senao
      Escreva("IMPAR")
   fimse
fimse

Fimalgoritmo