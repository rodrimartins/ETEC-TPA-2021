Algoritmo "exerc4"

Var
   // Seção de Declarações das variáveis

   num, soma: inteiro

Inicio

   // Seção de Comandos, procedimento, funções, operadores, etc...
   Escreva("Digite um número: ")
   leia(num)

   enquanto (num > 0 ) faca
      soma <- soma + num
      num <- num -1

   fimenquanto

   Escreva("Soma: ", soma)

Fimalgoritmo